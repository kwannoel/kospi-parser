cabal-version:       >=1.10
name:                kospi-parser
version:             0.1.0.0
synopsis:            Parses Kospi PCAP packets
homepage:            https://github.com/kwannoel/kospi-parser
license:             BSD3
license-file:        LICENSE
author:              Kwan Noel
maintainer:          noelkwan1998@gmail.com
category:            Network
build-type:          Simple
extra-source-files:  CHANGELOG.md, README.md

